<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp">

    <View
        android:id="@+id/event_type_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/purple_500" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/day_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workshop on AI"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day_event_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Code Breakers Club"
            android:textColor="#B0B0B0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/day_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2:00 PM at Main Auditorium"
            android:textColor="#E0E0E0"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
