<?xml version="1.0" encoding="utf-8"?>
<!-- This shape defines the background for the SearchView -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Sets a light grey background color for the search bar -->
    <solid android:color="#F0F0F0" />

    <!-- Applies rounded corners to the background -->
    <corners android:radius="24dp" />

    <!-- (Optional) Adds a subtle border around the search bar -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />
</shape>
