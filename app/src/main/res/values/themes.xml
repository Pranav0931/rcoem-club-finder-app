<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for LIGHT mode. -->
    <style name="Base.Theme.ClubFinder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- This line applies our custom style to all SearchViews in the app -->
        <item name="searchViewStyle">@style/CustomSearchViewStyle</item>
    </style>

    <style name="Theme.ClubFinder" parent="Base.Theme.ClubFinder" />

    <!-- Custom style for the SearchView in LIGHT mode -->
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Sets the custom light background -->
        <item name="queryBackground">@drawable/search_view_background</item>
        <!-- Removes the default underline -->
        <item name="android:background">@null</item>
        <!-- Sets the text color to black for readability -->
        <item name="android:textColor">@android:color/black</item>
        <!-- Sets the hint text color -->
        <item name="android:textColorHint">#8A8A8A</item>
    </style>
</resources>
